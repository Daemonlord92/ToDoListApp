<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= paginate @posts %>
<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Date started</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.task %></td>
        <td><%= post.date_started %></td>
        <td><%= post.due_date %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
